<!DOCTYPE html>
<html>
<head>
  <title>Assistant</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">AMP</a></h1>
      <h2>My Personal Assistant, redefined</h2>
    </div>
    <div id="content">
      <div id="nav">
          <% if current_user %>
          <%= link_to "Edit Profile", edit_user_path(current_user.id)%>
          <%= link_to "Logout", :logout%>
          <% else %>
          <%= link_to "Register", :register%> |
          <%= link_to "Login", :login %>
          <% end %>
      </div>
      <%= yield %>
    </div>
    <div class="push"></div>
  </div>
  <div id="footer">
    <div class="container">
      <p>footer content</p>
    </div>
  </div>
</body>
</html>
